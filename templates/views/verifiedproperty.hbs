<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Hello, world!</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"> -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/style.css" type="text/css">
</head>


<body>



    {{>dashboardmodal}}

    <div class="container-fluid mb-2" id="header_container_wrapper">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto rounded">
                <!-- header section -->
                <header id="header_container bg-light">
                    <!-- top header part -->
                    <div id="top_header">

                        <div id="top_front_header"><span id="main_icon" class="material-symbols-outlined">
                                home_app_logo
                            </span><a href="/">
                                <h2>airbnb</h2>
                            </a></div>

                        <div id="top_middle_header" class="dashboard-nav-links">
                            <div><a href="#booking-form-wrapper">Reserve</a></div>
                            <div><span>← </span><span>|</span><span> →</span></div>
                            <div><a href="#reviews-container-wrapper">Reviews</a></div>
                        </div>

                        <div id="top_end_header">
                            <div id="host_div" data-name={{name}}>
                                <a href="/user/myaccount" id="user_info">
                                    Hello, {{name}}
                                </a>
                            </div>
                            <div id="dropdown_wrapper">

                                <div id="dropdown_container">
                                    <div id="top_header_dropdown_container"><span
                                            class="material-symbols-outlined dropdown_icon">
                                            menu
                                        </span>
                                        <span id="account_icon_wrapper" style="background-image:url({{img}})">
                                        </span>
                                    </div>
                                    <div id="dropdown_button_container" class="hidden">
                                        <input type="button" value="My Account" class="header_dropdown_btn">
                                        <input type="button" value="Register Home" class="header_dropdown_btn">
                                        <input type="button" value="Log Out" class="header_dropdown_btn">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </header>
            </div>
        </div>
    </div>

    <!-- main feed  -->
    <div class="container-fluid col-md-10 col-12 mx-auto" id="main_feed_container">
        <div class="row" id="property_div">

        </div>
    </div>

    {{>footer}}

    <script src="/js/headerscript.js"></script>
    <script src="/js/property.js">
    </script>
</body>

</html>